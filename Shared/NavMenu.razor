@using ForumWars.Pages.Components
@inject NavigationManager NavManager

<script>
    function setIcon() {
        document.getElementsByClassName("theme-icon")[0].innerHTML = localStorage.getItem("theme") === "dark" ? "🌑" : "🌞";
    }

    function changeTheme() {
        console.log("teste aceso ao método");
        var theme = localStorage.getItem("theme") === "dark" ? "light" : "dark";
        document.body.classList.remove('light', 'dark');
        document.body.classList.add(theme);
        setIcon()
    }

    () => setIcon();
</script>
<div class="nav-wrapper">
    <div class="nav-title" @onclick=RedirectToHomePage>
        <span class="nav-title-text">ForumWars</span>
        <span class="nav-title-bomb">💣</span>
    </div>
    <nav class="nav">
        <div class="nav-option">Search</div>
        <div class="nav-option">New Discussion</div>
        <div class="nav-option">Github</div>
    </nav>
    <div clas="user-area">
        <User></User>
    </div>
</div>

@code {
    public void RedirectToHomePage()
    {
        NavManager.NavigateTo("/");
    }
}